{% extends 'base.html.twig' %}

{% block title %}Auteur{% endblock %}

{% block body %}
    <h1>Auteur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ auteur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ auteur.prenom }}</td>
            </tr>
            <tr>
                <th>Date_de_naissance</th>
                <td>{{ auteur.dateDeNaissance ? auteur.dateDeNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Photos</th>
                <td><img src="{{ asset('uploads/photo/' ~ auteur.photos) }}" alt="Photo de {{ auteur.prenom }}" style="width: 200px; height: auto;"></td>

            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_auteur_index') }}">back to list</a>

    <a href="{{ path('app_auteur_edit', {'id': auteur.id}) }}">edit</a>


    {{ include('auteur/_delete_form.html.twig') }}
{% endblock %}
